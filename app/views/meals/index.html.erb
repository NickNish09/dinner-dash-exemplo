<%= render 'banner' %>
</br>
<div class="cardContainer">
    <% @meals.each do |meal| %>
    <div class="card car_solo" style="width: 15rem; height: 20rem">
            <%= image_tag(meal.image, class: "img_certa" )%>
        <div class="card-body">
            <h5 class="card-title letra_img"><%= meal.name %></h5>
            <p class="card-text letra_desc"><%= meal.description %></p>
            <p class="card-text color_porc">R$ <%= meal.price %> por porção</p>
            <div>
                <%= link_to 'editar', edit_meal_path(meal), class: "btn btn-warning tam"%>
                <%= link_to 'excluir', meal_path(meal),method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger tam"   %>
            </div>
        </div>
    </div>
    <% end %>
</div>

</br>
<%= link_to  "nova refeição", new_meal_path, class: "btn btn-success" %>