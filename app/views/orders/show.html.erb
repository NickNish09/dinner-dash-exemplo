<% if session[:dest] == true%>
    <%= render 'banner' %>
<% else %>    
    <%= render 'ord' %>

<% end %>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg tent" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Detalhes do pedido</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="cardContainer">
             <% OrderMeal.all.each do |om| %>
                                <% if om.order_id == @order.id %>
                <div class="card" style="width: 30rem;height: 12rem">
                    <div class="card-body">
                        <div class="imgCard">
                           
                                        <div>    
                                        <%= image_tag(Meal.find(om.meal_id).image,height: '140', width: '140' )%>
                                    </div>
                                    <div id="text_carrinho">
                                        <h5 class="card-title"><%= Meal.find(om.meal_id).name %></h5>
                                        <br>
                                        <span class="card-text letra_desc1">Quantidade:<%=om.quantity%></span></br>
                                        <span class="card-text letra_desc1">Preço unitário: R$ <%= Meal.find(om.meal_id).price %></span></br>
                                        <span class="card-text letra_desc1">Preço total: R$ <%= Order.find(om.order_id).price %></span>
                                    </div>
                                                                    
                        </div>
                    </div>
                </div>
            
             <% end %>
                            <% end %>  
                            </div>   
        </div>  
        <div class="modal-footer">
            <%= link_to 'fechar', order_meals_path,data: {dismiss: "modal"}  ,class: "btn btn-secondary" %>
        </div>
        </div>
    </div>
</div>