<div class="loginScreen"> 
  <div class="img_login">
  </div>

  <div class="loginbox1">
      <h2 class="din">dinnerdash</h2>
      </br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :Nome %><br />
          <%= f.text_field :name, autocomplete: "off", autofocus: true , class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :Email %><br />
          <%= f.email_field :email, autocomplete: "email",class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :Senha %>
          <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :Confirme_sua_senha %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
        </div>
        </br>
        <div class="actions">
          <%= f.submit "Cadastrar", class: "btn btn-success btn-group-sm btn-block"%>
        </div>
        <hr>
      <% end %>
     <br/>
    <span id="n_cont">JÃ¡ possui conta ? </span>
    <p></p>
    <div class="btn btn-outline-success btn-group-sm btn-block">
    <%= render "users/shared/links" %>
    </div>
    </div>  
  </div>    
</div>