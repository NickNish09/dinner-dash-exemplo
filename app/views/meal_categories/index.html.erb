<%= render 'banner' %>
<div class="table_gender">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Nome</th>
                <th>Número de Refeições </th>
                <th>Cadastrada em</th>
                 <th colspan="2" ></th>
            </tr>
        </thead>
    <% count = 0 %>
        <tbody>
            <% @meal_categories.each_with_index do |category, index| %>
                <% Meal.all.each do |kk| %>
                    <% if kk.meal_category_id == category.id %>
                        <% count = count +1 %>
                    <% end %>
                <% end %>
                <tr>
                    <td><%= category.name %></td>
                    <td><%= count %></td>
                    <td><%= category.created_at.strftime("%d/%m/%Y") %></td>
                    <td>
                        <%= link_to 'editar', edit_meal_category_path(category), class: "btn btn-outline-warning bord"%>
                    </td>
                    <td>
                        <%= link_to 'apagar', meal_category_path(category), 
                        method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-outline-danger bord"   %>
                    </td>
                </tr>
                <% count = 0 %>
            <% end %>
        </tbody>
    </table>
    </br>
    <div class="button_new_order">
        <%= link_to  "nova categoria de refeição", new_meal_category_path, class: "btn btn-success" %>
    </div>
</div>

<footer class="footer">
  <li class="ftlil"><b>dinnerdash | todos os direitos reservados</b> </li>
  <li class="ftlir">desenvolvido por Trainee da silva </li>
</footer>